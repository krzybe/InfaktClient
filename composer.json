{
    "name": "miisieq/infakt-client",
    "description": "InfaktClient is a PHP library for the third version of Infakt REST API that makes it easy to perform CRUD (create, read, update and delete) operations on invoices, clients and products.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.2",
        "doctrine/inflector": "^1.1"
    },
    "authors": [
        {
            "name": "Micha≈Ç Szczech",
            "email": "m.szczech@hotmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Infakt\\": "src/Infakt/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Infakt\\Tests\\": "tests/Infakt/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.2"
    },
    "scripts": {
        "tests": "./vendor/phpunit/phpunit/phpunit",
        "phpcs" : "./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix -v"
    }
}
